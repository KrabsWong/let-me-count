{
  "name": "let-me-count",
  "displayName": "Let me count",
  "description": "Your friendly companion that counts words and characters, supporting multiple languages",
  "version": "1.0.0",
  "publisher": "KrabsWong",
  "author": {
    "name": "KrabsWong"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KrabsWong/let-me-count"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "word-counter.refresh",
        "title": "%command.refresh.title%"
      }
    ]
  },
  "devDependencies": {
    "@types/vscode": "^1.84.0",
    "@types/node": "16.x",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js",
    "package": "vsce package --no-yarn"
  },
  "keywords": [
    "word count",
    "character count",
    "statistics",
    "productivity",
    "multilingual"
  ],
  "icon": "images/icon.png",
  "l10n": "./l10n",
  "files": [
    "extension.js",
    "l10n/**"
  ]
}